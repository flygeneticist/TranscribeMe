<!doctype html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        <title>TranscribeMe</title>
        <link rel="stylesheet" href="styles/main.css">
        <script src="bower_components/jquery/jquery.js"></script>

        {{#if showTests}}
            <link rel="stylesheet" href="/vendor/mocha.css">
        {{/if}}
    </head>
    <body>
        <header>
            <div class="inner_content">
                <a name="logo" href="/" class="brand" alt="TranscribeMe"></a>
                <nav id="navBar">
                    <span><a href="/">Home</a></li></span>
                    <span><a href="/notes">Notes</a></li></span>
                    <span><a href="/schedule">Schedule</a></li></span>
                    <span><a href="/about">About</a></li></span>
                    <span><a href="/contact">Contact</a></li></span>
                </nav>
                <div class="userStatus">
                    <script>
                        var p = document.createElement("p");
                        if (true) {
                            p.appendChild(document.createTextNode("Welcome" + 'USERNAME' + "!"));
                            //<a href='/logout'>Logout</a>
                        } else {
                            p.appendChild(document.createTextNode("Please login!"));
                            //<a href='/login'>Login</a>
                        }
                    </script>
                </div>
            </div>
        </header>

        <content>
            <div class="inner_content">
                {{{ body }}}
            </div>
        </content>
        
        <footer>
            <div class="inner_content">
                TranscribeMe - Copyright 2014 - Kevin Keller
            </div>
        </footer>

        <!-- Run the test scripts if triggered -->
        {{#if showTests}}
            <div id="mocha"></div>
            <script src="/vendor/mocha.js"></script>
            <script src="/vendor/chai.js"></script>
            <script>
                mocha.ui('tdd');
                var assert = chai.assert;
            </script>
            <script src="/qa/global-tests.js"></script>
            {{#if pageTestScript}}
                <script src="{{pageTestScript}}"></script>
            {{/if}}
            <script>mocha.run();</script>
        {{/if}}

    </body>
</html>