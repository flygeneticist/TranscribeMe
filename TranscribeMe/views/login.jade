extends layout

block content
  h2 Login
  p Please sign-in with your Local, Twitter, Google, or Facebook account.

  p 
    a(data-toggle="collapse" href="#local" class="btn btn-warning btn-lg" role="button")
      span(class="glyphicon glyphicon-user")
    a(href="/auth/twitter" class="btn btn-info btn-lg" role="button")
      span(class="glyphicon glyphicon-user")
    a(href="/auth/google" class="btn btn-danger btn-lg" role="button")
      span(class="glyphicon glyphicon-user")
    a(href="/auth/facebook" class="btn btn-primary btn-lg" role="button")
      span(class="glyphicon glyphicon-user")

  div(id="local" class="collapse")
    a data-toggle="collapse" href="#local-login" class="btn btn-default btn-md" role="button" I already have an account
    a data-toggle="collapse" href="#local-reg" class="btn btn-default btn-md" role="button" I need to make an account

  form(id="local-login" class="collapse" action="/login" method="post")
    div 
      p 
      label Email:
      input(type="email" name="email")
    
    div 
      label Password:
      input(type="password" name="password")

    div 
      input(type="submit" class="btn btn-primary btn-sm" value="Log In")

  form(id="local-reg" class="collapse" action="/local-reg" method="post")
    div 
      p 
      label New Email:
      input(type="email" name="email")
    
    div 
      label New Password:
      input(type="password" name="password")

    div 
      input(type="submit" class="btn btn-primary btn-sm" value="Register")
